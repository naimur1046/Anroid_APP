<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#F7F5EB"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/sample_layout_for_doctor_details"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/bg_for_dotor_select"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            app:srcCompat="@drawable/male_doctor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_doctor_sample_layout"
                android:layout_width="251dp"

                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/adamina"
                android:gravity="start|center_vertical"
                android:text="Naimur Rathman"
                android:textColor="@color/DeepPink"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_of_doctor_sample_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:gravity="start"
                android:text=" 20 years"
                android:textColor="#804674"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/doctor_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="TextView"
                android:textColor="#804674"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>