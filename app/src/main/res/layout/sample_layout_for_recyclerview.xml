<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#F7F5EB"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="#FFF1DC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_smaple_layout"
            android:layout_width="148dp"
            android:layout_height="86dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/surgeon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_doctor_sample_layout"
                android:layout_width="232dp"

                android:layout_height="44dp"
                android:gravity="center"
                android:text="Naimur Rathman"
                android:textColor="#804674"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/details_of_doctor_sample_layout"
                android:layout_width="253dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text=" 20 years"
                android:textColor="#804674"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>